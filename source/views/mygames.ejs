<% include head.ejs %>
<title>My Games</title>
</head>
<body class="no-js">
	<header>
		<h1>Profile</h1>
		<h1>my games</h1>
	</header>
	<main>
		<section>
			<h2>Other games</h2>
			<a href="gamesearch" class="addgame">
				<article>
					<h3>Add Game</h3>
					<div class="addIcon"></div>
				</article>
			</a>
			<% for (var index = 0; index <data.length; index++) { %>
			<article class="game">
				<h3><%= data[index].title %></h3>
				<img src=<%= data[index].img %>>
				<form class="" action="delete/<%= data[index].id %>" method="post">
					<button type="submit" class="trashIcon"></button>
				</form>
			</article>
			<% } %>
		</section>
	</main>
	<script src="/scripts/gameslibrary.js"></script>
</body>
</html>
